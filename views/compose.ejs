<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
  <label>Title</label>
  <input type="text" name="postTitle" class="form-control" id="formGroupExampleInput" placeholder="Post Title" autofocus autocomplete="off">
  </div>

  <div class="form-group">
  <label>Post</label>
  <textarea class="form-control" name="postBody" rows="8" cols="80" placeholder="Compose Blog" autocomplete="off"></textarea>
  </div>
  <button type="submit" name="publish" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>
